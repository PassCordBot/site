---
import Nav from '../components/Nav.astro';
import background from '../assets/background.svg';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<html lang='en'>
	<head>
		<title>Pyrite - {title}</title>
		<meta charset='utf-8' />
		<meta name='viewport' content='width=device-width' />
		<meta name='title' content={`Pyrite - ${title}`} />
		<meta name='description' content='Know your members. Know your community.' />
		<meta property='og:site_name' content='Pyrite' />
		<meta property='og:title' content={`Pyrite - ${title}`} />
		<meta property='og:description' content='Know your members. Know your community.' />
		<meta property='og:image' content='/favicon.png' />
		<link rel='icon' type='image/svg+xml' href='/favicon.png' />
	</head>
	<body class='bg-[#001220]'>
		<Nav />
		<slot />
		<style define:vars={{ background: `url(${background})` }}>
			@font-face {
				src: url('/fonts/unisans.woff2') format('woff2'), url('/fonts/unisans.woff') format('woff');
				font-family: 'Uni Sans';
				font-display: swap;
			}

			@font-face {
				src: url('/fonts/whitney.woff2') format('woff2'), url('/fonts/whitney.woff') format('woff');
				font-family: 'Whitney';
				font-display: swap;
			}

			body {
				background-image: var(--background);
				width: 100%;
				background-repeat: no-repeat;
				background-position: center;
				background-size: cover;
			}

			*::-webkit-scrollbar {
				width: 12px;
				height: 12px;
				background-color: transparent;
			}

			*::webkit-scrollbar-track {
				background-color: transparent;
				border-radius: 10px;
			}

			*::-webkit-scrollbar-thumb {
				background-image: linear-gradient(
					45deg,
					rgb(255 255 255 / 30%) 20%,
					transparent 20%,
					transparent 40%,
					rgb(255 255 255 / 30%) 40%,
					rgb(255 255 255 / 30%) 60%,
					transparent 60%,
					transparent 80%,
					rgb(255 255 255 / 30%) 80%
				);
				background-color: #6366f1;
				border-radius: 10px;
			}
		</style>
	</body>
</html>
