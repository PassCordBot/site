---
export interface Props {
	to: string;
	bg?: boolean;
}

const { to, bg = false } = Astro.props;
---

<a
	href={to}
	target='_blank'
	class={`flex gap-2 text-white ${
		bg ? 'bg-gradient-to-r' : 'hover:bg-gradient-to-r'
	} from-[#38b6ff] to-[#5865f2] px-3 py-2 rounded-full md:text-sm text-xs font-medium`}
>
	<slot />
	<svg preserveAspectRatio='xMidYMid meet' viewBox='0 0 24 24' width='1.2em' height='1.2em' class='h-5 w-5'>
		<path
			fill='none'
			stroke='currentColor'
			stroke-linecap='round'
			stroke-linejoin='round'
			stroke-width='2'
			d='M10 6H6a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2v-4M14 4h6m0 0v6m0-6L10 14'></path>
	</svg>
</a>
